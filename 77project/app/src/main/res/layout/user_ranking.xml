<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="#CFB997"
                android:drawableLeft="@drawable/ic_crown_fill"
                android:gravity="center"
                android:paddingLeft="23dp"
                android:paddingRight="200dp"
                android:text="순위"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="76dp"
                android:background="#CFB997"
                android:src="@drawable/back"/>
                
    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※ 순위는 매 자정에 초기화됩니다."
            android:paddingRight="10dp"
            android:layout_gravity="right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#D3D1D1"/>
            <TabHost
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabhost">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@android:id/tabcontent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/walking"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="순위"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="닉네임"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="5"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="걸음수"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:background="#D3D1D1"/>

                        <ListView
                            android:id="@+id/walk_item"
                            android:layout_width="match_parent"
                            android:layout_height="460dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#D3D1D1" ></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="👑 내 순위 👑"
                                android:layout_margin="5dp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="#D3D1D1" ></View>

                            <LinearLayout
                                android:layout_margin="25dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/myWalkRankNum"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="순위"/>

                                <TextView
                                    android:id="@+id/myWalkNickname"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="닉네임"/>

                                <TextView
                                    android:id="@+id/myWalked"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="5"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="걸음수"/>

                            </LinearLayout>

                    </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/training"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="순위"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="닉네임"/>

                            <TextView
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:gravity="center"
                                android:layout_weight="5"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="점수"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:background="#D3D1D1"/>

                        <ListView
                            android:id="@+id/train_item"
                            android:layout_width="match_parent"
                            android:layout_height="500dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#D3D1D1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="👑 내 순위 👑"
                                android:layout_margin="5dp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="#D3D1D1"/>

                            <LinearLayout
                                android:layout_margin="25dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/myTrainRankNum"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="순위"/>

                                <TextView
                                    android:id="@+id/myTrainNickname"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="닉네임"/>

                                <TextView
                                    android:id="@+id/myTrained"
                                    android:textStyle="bold"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:layout_weight="5"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="점수"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:background="@drawable/below_shadow"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </RelativeLayout>

            </TabHost>

    </LinearLayout>

</RelativeLayout>